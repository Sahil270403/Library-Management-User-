<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment"
    android:background="@drawable/gradient_my">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Management"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:textColor= "@color/DarkGreen"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardElevation="700dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="70dp"
        android:id="@+id/cardvid">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book1"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="35dp"
            android:orientation="vertical"
            android:layout_gravity="top">

                <TextView
                    android:id="@+id/mailname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail name"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/tienne"/>

            <TextView
                android:id="@+id/mailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail ID"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/tienne"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="700dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="270dp"
        android:id="@+id/cardvid1">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="700dp"
            android:layout_marginTop="10dp"
            android:id="@+id/cardvid2"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requested Books"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/tienne"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="700dp"
            android:layout_marginTop="72dp"
            android:id="@+id/cardvid3"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrowed Books"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/tienne"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="700dp"
            android:layout_marginTop="134dp"
            android:id="@+id/cardvid4"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:fontFamily="@font/tienne"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</FrameLayout>